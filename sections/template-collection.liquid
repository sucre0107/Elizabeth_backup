<div class="px-4 py-8">
	<a href="{{ routes.collections_url }}" class="capitalize text-base text-gray-500 hover:underline text-center block my-4">>> go back to collections</a>
	{% paginate collection.products by section.settings.number_of_product_per_page %}
		<h1 class="text-3xl text-center">{{ collection.title }}</h1>

		<div class="max-w-6xl mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
				{% for product in collection.products %}

					{% render 'product-card', product:product %}

					{% else %}
						<p>There is no products inside of this collection</p>
					{% endfor %}
			</div>

		</div>

		{% render 'pagination', pagination: paginate %}
	{% endpaginate %}
</div>




{% schema %}
{
  "name":"产品系列模板",
  "settings":[
	  {
		"type":"number",
		"id":"number_of_product_per_page",
		"default":6,
		"label":"设定每页显示产品的数量"
	  }
	]
}
{% endschema %}

