<div class="flex-col flex items-center my-8">
	{% if section.settings.title != blank %}
		<h1 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
	{% endif %}
	{% form 'contact' %}
		<div class="max-w-7xl mx-auto justify-center flex-1 items-center px-4">

			{% if form.errors %}
				<div class="border p-5">
					<div class="flex flex-row items-center w-full my-3">
						<div class="text-red-500">
							{% render 'icon-fail' %}
						</div>
						<div class="text-sm font-medium ml-3">
							Oh,NO!Your Message was not send
						</div>
					</div>
					<ul class="px-4 mb-3 ml-7 list-decimal">
						{% for error in form.errors %}
							<li>
								<span>{{ form.errors.messages[error] }}</span>
							</li>

						{% endfor %}
					</ul>
				</div>
			{% elsif form.posted_successfully? %}
				<div class="flex flex-row items-center w-full my-3 p-5">
					<div class="text-green-500">
						{% render 'icon-success' %}
					</div>
					<div class="text-sm font-medium ml-3">
						Your Message is sent successfully!
					</div>
				</div>
			{% endif %}

			<div class="flex px-1 mb-3">
				<div class="px-3 md:w-1/2">
					<label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
					<input class="border py-3 px-4 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
				</div>

				<div class="px-3 md:w-1/2">
					<label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
					<input class="border py-3 px-4 text-gray-700 w-full" type="text" name="contact[email]" id="contact_email">
				</div>
			</div>
			<div class="flex px-1 mb-3">
				<div class="w-full px-3">
					<label class="uppercase text-xs text-gray-500 font-medium" for="">Message</label>
					<textarea class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_name"></textarea>
				</div>
			</div>
			<div class="flex px-1 mb-3">
				<div class="w-full px-3">
					<input class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-green-900 text-white hover:bg-gray-700" type="submit" value="Submit your message">
				</div>
			</div>
		</div>

	{% endform %}
</div>



{% schema %}
{
  "name":"联系表单",
  "settings":[
	{
	  "type":"text",
	  "id":"title",
	  "default":"",
	  "label":"表单标题"
	}
  ],
  "presets":[
	{
	  "name":"联系表单"
	}
  ]
}
{% endschema %}